@model IEnumerable<CrossPlatform_Crud.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<table class="table table-bordered table-hover">
    <thead class="table-success">
        <tr>
            <td>First Name</td>
            <td>Surname</td>
            <td>Hire Date</td>
            <td>Age</td>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td>There are no customers</td>
                <td colspan="3"></td>
            </tr>
        }
        else
        {
            foreach (var customer in Model)
            {
                ViewBag.Date = customer.Hire_Date.ToLongDateString();
                <tr data-id="@customer.Id" class="pointer">
                    <td>@customer.FirstName</td>
                    <td>@customer.Surname</td>
                    <td>@ViewBag.Date</td>
                    <td>@customer.Age</td>
                </tr>
            }
        }
    </tbody>
</table>